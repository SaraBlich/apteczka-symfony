{% extends 'base.html.twig' %}

{% block title %}Twoje Apteczki{% endblock %}

{% block body %}
<p>Zutylizuj przeterminowane leki z poniższych apteczek:</p>
    <ul style="color:red">
     {% for p  in przeterminowane %}
         <li>{{p}}</li>
     {% endfor %}
    </ul>
    <h1>Twoje Apteczki</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Zarządzaj</th>
            </tr>
        </thead>
        <tbody>
        {% for apteczka in apteczkas %}
            <tr>
                <td>{{ apteczka.id }}</td>
                <td>{{ apteczka.nazwa }}</td>
                <td>
                    <a href="{{ path('apteczka_show', {'id': apteczka.id}) }}">Pokaż</a>
                    &nbsp; &nbsp;
                    <a href="{{ path('apteczka_edit', {'id': apteczka.id}) }}">Edytuj</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Nie zarządzasz aktualnie żadnymi apteczkami.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('apteczka_new') }}">Stwórz nową apteczkę</a>
{% endblock %}
